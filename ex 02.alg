algoritmo "Triangulo"
// Função :
// Autor :
// Data : 06/05/2019
// Seção de Declarações 
var
   base, altura, area : real


inicio
    Escreva("Informe a base do triangulo:")
    leia(base)
    Escreva("Informe a altura do triangulo:")
    leia (altura)

    area <- (base * altura) /2
    Escreva ("A area do triangulo é:", area)


fimalgoritmo
