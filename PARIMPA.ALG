Algoritmo "parimpa"

Var
      numero, resto:inteiro


Inicio
        Escreva("Digite um numero:")
        leia (numero)
        resto <- numero MOD 2
        Se (resto = 0) Entao
            Escreva("O numero e par:")
        Senão
            Escreva("O numero e impar:")
            
       Fimse


Fimalgoritmo