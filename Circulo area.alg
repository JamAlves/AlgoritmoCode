algoritmo "circulo"
// Função :
// Autor :
// Data : 20/05/2019
// Seção de Declarações 
var
      area, perimetro, raio: real

inicio
    Escreva("informe o valor do raio:")
    leia(raio)
    
     perimetro <- 2 * Pi * raio
     
     Escreva("A area é", area)
     Escreva("O perimetro é ", perimetro)



fimalgoritmo
