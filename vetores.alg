algoritmo "registraaluno"



Tipo
    notas = vetor [1..4] de real
    cad_aluno = registro
    nome:caractere
    nota:notas
fim_registro

var
   Aluno:cad_aluno
   i:inteiro

inicio
    Escreva("Informe nome do aluno:")
    leia(aluno.nome)
    Para i de 1 ate 4 passo 1 Faca
         Escreva("Informe a nota",i , ":")
         leia(aluno.nota[i])
    
 FIMPARA


fimalgoritmo
